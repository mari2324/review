<% unless session[:user] %>

<a href ='/sign_up'>新規登録</a>
<a href ='/sign_in'>ログイン</a>

<% else %>
<% id= session[:user] %>
<a href="/<%= session[:user] %>">マイページ</a>
<a href ="/sign_out">ログアウト</a>
<form action="/" method="POST">
    <input type="text" name="content">
    <input type="submit" value="投稿する">
</form>
<table>
 <% @reviews.each do |review| %>
  <tr>
    <td><%= review.content %></td>
    <td><%= review.user_id %></td>
    <% if review.user_id==session[:user] %>
    <td><form action="/<%=review.id%>/delete" method="POST"><input type ="submit" value="X"></form></td>
    <td><form action="/<%=review.id%>/edit" method="GET"><input type ="submit" value="編集"></form></td>
    <% end %>
  </tr>
 <% end %>
</table>
<% end %>